---
import { APP_BLOG, I18N } from "astrowind:config";
import GiscusComment from "../blog/GiscusComment.astro";
import WidgetWrapper from "~/components/ui/WidgetWrapper.astro";

const { language } = I18N;
import type { Widget } from "~/types";

export interface Props extends Widget {
  title?: string;
}

const {
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render("bg"),
} = Astro.props;
---

{
  APP_BLOG.isEnabled ? (
    <WidgetWrapper
      id={id}
      isDark={isDark}
      containerClass={classes?.container as string}
      bg={bg}
    >
      <GiscusComment />
    </WidgetWrapper>
  ) : (
    <Fragment />
  )
}
