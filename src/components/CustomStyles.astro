---
import '@fontsource-variable/noto-sans-kr';

---

<style is:inline>
  :root {
    --aw-font-sans: 'Noto Sans KR Variable';
    --aw-font-serif: 'Noto Sans KR Variable';
    --aw-font-heading: 'Noto Sans KR Variable';

    --aw-color-primary: rgb(15, 102, 171);
    --aw-color-secondary: rgb(15, 102, 171);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(248, 250, 252);

    --aw-color-bg-page-dark: rgb(49, 65, 88);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Noto Sans KR Variable';
    --aw-font-serif: 'Noto Sans KR Variable';
    --aw-font-heading: 'Noto Sans KR Variable';

    --aw-color-primary: rgb(15, 102, 171);
    --aw-color-secondary: rgb(17, 92, 161);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(29, 41, 61);

    ::selection {
      background-color: rgb(2, 6, 24);
      color: snow;
    }
  }
</style>
